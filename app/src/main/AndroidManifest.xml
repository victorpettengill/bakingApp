<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.victorpettengill.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.RecipeListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.RecipeItemListActivity"
            android:label="@string/title_recipeitem_list"
            android:launchMode="singleInstance"
            android:parentActivityName=".ui.RecipeListActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.victorpettengill.bakingapp.ui.RecipeListActivity" />

        </activity>

        <activity
            android:name=".ui.RecipeItemDetailActivity"
            android:label="@string/title_recipeitem_detail"
            android:parentActivityName=".ui.RecipeItemListActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="screenSize|orientation">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.victorpettengill.bakingapp.ui.RecipeItemListActivity" />
        </activity>

        <receiver android:name="android.support.v4.media.session.MediaButtonReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

    </application>

</manifest>